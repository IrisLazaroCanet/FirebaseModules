<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ModuloDosFirebaseCDI" parent="Theme.ModuloDosFirebaseCDI.Base">

    </style>

    <!-- Base application theme. -->
    <style name="Theme.ModuloDosFirebaseCDI.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseLight</item>
        <item name="colorPrimaryVariant">@color/lighterLight</item>
        <item name="colorOnPrimary">@color/baseGrey</item>
        <item name="android:textColorPrimary">@color/baseLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseGrey</item>
        <item name="colorSecondaryVariant">@color/lighterGrey</item>
        <item name="colorOnSecondary">@color/baseLight</item>
        <item name="android:textColorSecondary">@color/debugColor</item>

        <!-- Surface Colors -->
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">@color/clearColor</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/baseGrey</item>

        <!-- Shadow setup -->
        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>

        <!-- Background app -->
        <item name="android:colorBackground">@color/baseLight</item>

        <!-- Customize your theme here. -->
        <item name="navigationViewStyle">@style/ModuloDosFirebaseCDI.Drawer</item>
        <item name="toolbarStyle">@style/ModuloDosFirebaseCDI.Toolbar</item>
        <item name="bottomNavigationStyle">@style/ModuloDosFirebaseCDI.BottomBar</item>
        <item name="materialCardViewStyle">@style/ModuloDosFirebaseCDI.CardView</item>
        <item name="textInputStyle">@style/ModuloDosFirebaseCDI.Input</item>
        <item name="materialButtonStyle">@style/ModuloDosFirebaseCDI.Button</item>
        <item name="extendedFloatingActionButtonStyle">@style/ModuloDosFirebaseCDI.FloatingButtonExtended</item>
        <item name = "snackbarStyle">@style/ModuloDosFirebaseCDI.Snackbar</item>
        <item name = "snackbarTextViewStyle">@style/ModuloDosFirebaseCDI.Snackbar.TextView</item>
    </style>


   <!-- Other themes -->
    <style name = "Theme.ModuloDosFirebaseCDI.Christmas" parent = "Theme.ModuloDosFirebaseCDI">
        <item name="colorPrimary">@color/baseRed</item>
        <item name="colorSecondary">@color/baseGreen</item>

    </style>



    <!-- Customize your theme here. -->
    <!-- POT SER QUE LES OMBRES NO FUNCIONIN BÉ A L'EMULADOR, PERÒ SÍ A UN MÒBIL REAL -->
    <style name="ModuloDosFirebaseCDI.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
        <item name="navigationIconTint">?attr/colorPrimary</item>
    </style>

    <style name="ModuloDosFirebaseCDI.Drawer" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="itemTextColor">?attr/colorPrimary</item>
        <item name="elevation">@dimen/shadow_elevation</item>
    </style>

   <style name="ModuloDosFirebaseCDI.BottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
        <item name="itemIconTint">@color/selectables_buttons_color</item>
        <item name="itemRippleColor">@color/baseLightAlphaLow</item>
   </style>


    <style name="ModuloDosFirebaseCDI.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/shadow_elevation</item>
    </style>

    <style name="ModuloDosFirebaseCDI.Input" parent = "@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/tiny</item>
        <item name="boxStrokeWidthFocused">@dimen/tiny</item>
        <item name="boxStrokeErrorColor">@color/baseRed</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="hintTextColor">@color/lighterLight</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>

    <style name="ModuloDosFirebaseCDI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="rippleColor">@color/lighterLight</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>
    </style>

    <style name="ModuloDosFirebaseCDI.Button.NoShadow" parent="ModuloDosFirebaseCDI.Button">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ModuloDosFirebaseCDI.FloatingButtonExtended" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">

    </style>

    <style name = "ModuloDosFirebaseCDI.Snackbar" parent ="Widget.MaterialComponents.Snackbar">
        <item name ="elevation">@dimen/shadow_elevation</item>
    </style>

    <style name = "ModuloDosFirebaseCDI.Snackbar.TextView" parent ="Widget.MaterialComponents.Snackbar.TextView">
        <item name ="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>